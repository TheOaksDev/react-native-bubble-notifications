<?xml version="1.0" encoding="utf-8"?>
<com.txusballesteros.bubbles.BubbleLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:clipChildren="false"
  android:clipToPadding="false"
  tools:ignore="MissingClass">

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
      android:id="@+id/avatar"
      android:contentDescription="@string/bubble_image"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:layout_marginBottom="5dp"
      android:background="@drawable/profile_decorator"
      android:src="@drawable/bubble_icon"
      android:scaleType="centerCrop"/>

    <LinearLayout
      android:id="@+id/notification_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:background="@drawable/rounded_corners"
      android:orientation="vertical"
      android:visibility="visible">

      <!-- Fare -->

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
          android:id="@+id/imageView2"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginTop="8dp"
          app:srcCompat="@drawable/bubble_icon" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="start"
          android:layout_weight="1"
          android:orientation="vertical">

          <TextView
            android:id="@+id/pickUpLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:gravity="center|start"
            android:padding="5dp"
            android:text="Assigned a trip"
            android:textColor="#f4f4f4"
            android:textSize="34sp" />

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
              android:id="@+id/markerFrom"
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:layout_marginTop="8dp"
              android:layout_weight="0"
              app:srcCompat="@drawable/marker_from" />

            <TextView
              android:id="@+id/pickUpAddress"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="sans-serif-medium"
              android:lines="1"
              android:padding="5dp"
              android:text="1413 Colorado Bend Dr, Cedar Park "
              android:textColor="#f4f4f4"
              android:textSize="22dp" />

          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:orientation="horizontal">

            <ImageView
              android:id="@+id/markerTo"
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:layout_marginTop="8dp"
              android:layout_weight="0"
              app:srcCompat="@drawable/marker_to" />

            <TextView
              android:id="@+id/dropOffAddress"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="sans-serif-medium"
              android:lines="1"
              android:padding="5dp"
              android:text="Mojo Coffee Ranch Road 620, Cedar Park"
              android:textColor="#f4f4f4"
              android:textSize="22dp" />

          </LinearLayout>

        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="10dp">

          <TextView
            android:id="@+id/fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginVertical="2dp"
            android:background="@drawable/round_button"
            android:fontFamily="sans-serif-medium"
            android:padding="5dp"
            android:text="$10.50"
            android:textColor="#f4f4f4"
            android:textSize="24sp" />

          <TextView
            android:id="@+id/fare2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginVertical="2dp"
            android:background="@drawable/round_secondary_button"
            android:fontFamily="sans-serif-medium"
            android:padding="5dp"
            android:text="5 mi"
            android:textColor="#f4f4f4"
            android:textSize="24sp" />

          <TextView
            android:id="@+id/fare3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginVertical="2dp"
            android:background="@drawable/round_secondary_button"
            android:fontFamily="sans-serif-medium"
            android:padding="5dp"
            android:text="20 min"
            android:textColor="#f4f4f4"
            android:textSize="24sp" />

        </LinearLayout>

      </LinearLayout>

      <!-- Lower Buttons -->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Button
          android:id="@+id/re_open_app"
          android:layout_width="250dp"
          android:layout_height="45dp"
          android:layout_gravity="center"
          android:layout_marginVertical="15dp"
          android:background="@drawable/round_button"
          android:onClick="reopenApp"
          android:text="Return to app"
          android:textColor="#f4f4f4"
          android:textFontWeight="700"
          android:textSize="15dp" />

      </LinearLayout>

    </LinearLayout>


  </LinearLayout>

</com.txusballesteros.bubbles.BubbleLayout>


